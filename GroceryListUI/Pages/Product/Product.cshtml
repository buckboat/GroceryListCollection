@page
@model GroceryListUI.Pages.Models.IndexModel;

@{

}
<div class="container"> 
    <div class = "row">
        <div class = "col-sm-3">
            <h2>Product List</h2>
        </div>
    <div class = "col-sm-9">
    <a class="btn btn-primary" asp-page="AddProduct"> Add Product</a>
</div>
</div>
    @foreach (var product in Model.ProductsList)
    { 
    <!-- Product List-->
    <div class="row mb-3">
        <div class ="col-sm-3">
                <img src="@product.ImageURL" /> <!-- image goes here-->
        </div>

        <div class = "col-sm-9">
        <div class = "row">
        <div class = "col-sm-12">
           <img src = "@product.NutrtionLabel" />
            </div>
                    </div>
        <div class = "row">
        <div class = "col-sm-12">
            @product.Description
            </div>
                    </div>
        <div class = "row">
        <div class = "col-sm-12">
           @product.Price
            </div>
          </div>
        </div>
    </div>
 
}
</div>
