@page
@model GroceryListUI.Pages.Product.AddProduct
@{
}

<form method="post">
    <div class="row mb-3">
        <label for="inputProductName" class="col-sm-2 col-form-label">Product Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputProductName" asp-for="NewProduct.ProductName"/>
        </div>
    </div> 

    <div class ="row mb-3">
        <label for="inputProductImage" class="col-sm-2 col-form-label">Product Image:</label>
        <div  class="col-sm-10 ">
            <input type="text" class="form-control" id="inputProductImage" asp-for="NewProduct.ImageURL" />
        </div>
    </div>

   <div class ="row mb-3">
        <label for="inputNutrtionLabel" class = "col-sm-2 col-form-label">Nutritoin Label:</label>
        <div  class="col-sm-10 ">
            <input type="text" class="form-control" id="inputNutrtionLabel" asp-for="NewProduct.NutrtionLabel"/>
        </div>
   </div>

        <div class ="row mb-3">
        <label for="inputDescription" class = "col-sm-2 col-form-label">Description:</label>
        <div  class="col-sm-10 ">
            <textarea rows="3" class="form-control" id="inputDescription" asp-for=" NewProduct.Description "></textarea>
        </div>
   </div>

   <div class ="row mb-3">
        <label for="inputPrice" class = "col-sm-2 col-form-label">Price:</label>
        <div  class="col-sm-10 ">
            <input type="text" class="form-control" id="inputPrice" asp-for="NewProduct.Price"/>
        </div>
   </div>

   <div class ="row mb-3">
        <label for="inputIngredients" class = "col-sm-2 col-form-label">Ingredients:</label>
        <div  class="col-sm-10 ">
            <input type="text" class="form-control" id="inputIngredient" asp-for="NewProduct.Ingredient"/>
        </div>
   </div>
   <div class ="row mb-3">
        <label for="inputQuantity" class = "col-sm-2 col-form-label">Quantity:</label>
        <div  class="col-sm-10 ">
            <input type="text" class="form-control" id="inputQuantity" asp-for="NewProduct.Quantity"/>
        </div>
   </div>

    <div>
    <button type="submit" class="btn btn-secondary">Add Product</button>
    </div>
 


</form>
