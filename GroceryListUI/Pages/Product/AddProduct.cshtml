@page
@model GroceryListUI.Pages.Product.AddProduct
@{
}

<form method="post">

    <!--Logo-->
    <div class="row mb-3"> 
        <div class="col-sm-2">
            <img src="https://m.media-amazon.com/images/I/51ci9LqaybL._AC_SL1000_.jpg" style="width:100%;max-width:100px"/>
        </div>

    <!--Product Name-->
        <div class="AddProductBg col-sm-5">
        <label for="inputProductName" class=" col-sm-3 col-form-label"> Product Name:</label>
            <input type="text" class="form-control" id="inputProductName" asp-for="NewProduct.ProductName"/>
        </div>

        <!--Price-->
        <div class="AddProductBg col-sm-5">
        <label for="inputPrice" class = " col-sm-3 col-form-label">Price:</label>
             <input type="text" class="form-control" id="inputPrice" asp-for="NewProduct. Price"/>
        </div>
   </div>
    

    
    <div class ="row mb-5">
         <!--Image-->
        <div class="AddProductBg col-sm-5">
        <label for="inputProductImage" class="col-sm-3 col-form-label">Product Image:</label>
            <input type="text" class="form-control" id="inputProductImage" asp-for="NewProduct.ImageURL" />
        </div>

        <div class="col-sm-2 ">
        </div>

        <!--Label-->
        <div class="AddProductBg col-sm-5">
        <label for="inputNutrtionLabel" class = "col-sm-3 col-form-label">Nutrition Label:</label>
            <input type="text" class="form-control" id="inputNutrtionLabel" asp-for="NewProduct.NutrtionLabel"/>
        </div>
   </div>

        <!--Ingredients-->
    <div class="AddProductBg row mt-3 mb-3">
            <label for="inputIngredients" class="col-sm-1 col-form-label ">Ingredients:</label>
            <div class="col-sm-11 ">
            <textarea rows="3" class="form-control" id="inputIngredient" asp-for="NewProduct.Ingredient"></textarea>
        </div>

        </div>
   
        <!--Description-->
   <div class ="row mb-3">
        <div class="AddProductBg col-sm-9">
        <label for="inputDescription" class="col-sm-2 col-form-label">Description:</label>
            <textarea rows="3" class="form-control" id="inputDescription" asp-for=" NewProduct.Description "></textarea>
            <div class="col-sm-10 ">
            </div>
        </div>
   
        <div class="col-sm-1 ">
        </div>

   <!--
   <div class ="row mb-3">
        <label for="inputQuantity" class = "col-sm-2 col-form-label">Quantity:</label>
        <div  class="col-sm-10 ">
            <input type="text" class="form-control" id="inputQuantity" asp-for="NewProduct.Quantity"/>
        </div>
   </div>-->

    
        <div class="AddProductBg col-sm-2 row align-items-center ">
        <button type="submit" id="AddProductBtn" class="btn btn-success">Add Product</button>
    </div>
</div>


</form>
